<?xml version="1.0" encoding="utf-8"?>
<extension type="component" version="2.5" method="upgrade">
	<name>com_blog_calendar</name>
	<creationDate>2016/12/01</creationDate>
	<author>Groon solutions</author>
	<license>GNU/GPL http://www.gnu.org/copyleft/gpl.html</license>
	<version>3.0.0</version>
	<description>With blog calendar comopnent you can create a listing by descending date using a blog layout.</description>
	
	<!-- Administrator back-end section -->
	<administration>
		<menu>Blog Calendar</menu>
		<submenu>
		<menu task="edit_css">CSS edit</menu>
		</submenu>
		<files folder="admin">
			<filename>index.html</filename>
			<filename>blog_calendar.php</filename>
            <filename>controller.php</filename>
            <filename>calendar.gif</filename>
            <filename>bg.gif</filename>
            <filename>blogcalendar.gif</filename>
		</files>
        <!-- Administration Language File Copy Section -->
        <languages folder="language/admin">
            <language tag="en-GB">en-GB.com_blog_calendar.sys.ini</language>
            <language tag="ja-JP">ja-JP.com_blog_calendar.sys.ini</language>
        </languages>
	</administration>
	
	<!-- Public front end files -->
	<files folder="site">
		<filename>index.html</filename>
		<filename>blog_calendar.php</filename>
		<filename>controller.php</filename>
    	<folder>models</folder>
        <folder>views</folder>
        <folder>helpers</folder>
	</files>
    <!-- Site Main Language File Copy Section -->
    <languages folder="language/site">
        <language tag="en-GB">en-GB.com_blog_calendar.ini</language>
        <language tag="ja-JP">ja-JP.com_blog_calendar.ini</language>
    </languages>
</extension>
