<?xml version="1.0" encoding="utf-8"?>
<extension type="component" version="3.0" method="upgrade">
  <name>com_bsbooking</name>
  <author>GROON solutions</author>
  <creationDate>2014/03/01</creationDate>
  <copyright>Copyright (C) 2009 - 2016 GROON Project All rights reserved.</copyright>
  <license>GNU General Public License version 2 or later; see	LICENSE.txt</license>
  <authorUrl>http://www.groon.jp/</authorUrl>
  <description>COM_BSBOOKING_XML_DESCRIPTION</description>
  <version>3.0.0</version>
	
	<!-- Administrator back-end section -->
	<administration>
		<menu img="components/com_bsbooking/assets/images/icon-16-bsbooking.png">COM_BSBOOKING</menu>
		<files folder="admin">
			<filename>index.html</filename>
			<filename>bsbooking.php</filename>
            <filename>controller.php</filename>
            <filename>config.xml</filename>
            <filename>install.bsbooking.sql</filename>
            <filename>uninstall.bsbooking.sql</filename>
            <folder>assets</folder>
            <folder>controllers</folder>
            <folder>helpers</folder>
            <folder>models</folder>
            <folder>tables</folder>
            <folder>views</folder>
		</files>
        <!-- Administration Language File Copy Section -->
        <languages folder="language/admin">
            <language tag="en-GB">en-GB.com_bsbooking.ini</language>
			<language tag="en-GB">en-GB.com_bsbooking.sys.ini</language>
            <language tag="ja-JP">ja-JP.com_bsbooking.ini</language>
			<language tag="ja-JP">ja-JP.com_bsbooking.sys.ini</language>
        </languages>
	</administration>
	
	<!-- Public front end files -->
	<files folder="site">
		<filename>index.html</filename>
		<filename>bsbooking.php</filename>
		<filename>bsbooking.init.php</filename>
        <filename>controller.php</filename>
        <filename>router.php</filename>
        <folder>assets</folder>
        <folder>controllers</folder>
        <folder>helpers</folder>
        <folder>libraries</folder>
        <folder>models</folder>
        <folder>views</folder>
	</files>
    <!-- Site Main Language File Copy Section -->
    <languages folder="language/site">
        <language tag="en-GB">en-GB.com_bsbooking.ini</language>
        <language tag="ja-JP">ja-JP.com_bsbooking.ini</language>
    </languages>
    <!-- Custom Install Script to execute -->
    <scriptfile>script.bsbooking.php</scriptfile>

	<install>
		<sql>
			<file charset="utf8" driver="mysql">install.bsbooking.sql</file>
		</sql>
	</install>
	<uninstall>
		<sql>
			<file charset="utf8" driver="mysql">uninstall.bsbooking.sql</file>
		</sql>
	</uninstall>
</extension>