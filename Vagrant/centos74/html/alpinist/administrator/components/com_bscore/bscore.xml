<?xml version="1.0" encoding="utf-8"?>
<extension type="component" version="3.0" method="upgrade">
	<name>com_bscore</name>
	<creationDate>2014/03/01</creationDate>
	<author>Groon solutions</author>
	<authorEmail>infodesk@groon.co.jp</authorEmail>
	<authorUrl>http://groon.co.jp</authorUrl>
	<copyright>2009 - 2011 GROON Solutions</copyright>
	<license>GNU/GPL http://www.gnu.org/copyleft/gpl.html</license>
	<version>3.0.0</version>
	<description>BsAlpinist core system extension for Joomla! 3.X</description>
	
	<!-- Administrator back-end section -->
	<administration>
		<menu img="components/com_bscore/assets/images/icon-16-bscore.png">COM_BSCORE</menu>
		<submenu>
		<menu view="userlist" link="option=com_bscore&amp;task=userlist.show">COM_BSCORE_ADDITIONAL_USER_INFORMATION</menu>
		<menu view="divlist" link="option=com_bscore&amp;task=divlist.show">COM_BSCORE_DIVISION_MANAGER</menu>
		<menu view="accontrol" link="option=com_bscore&amp;task=accontrol.show">COM_BSCORE_ACCESS_CONTROL_MANAGER</menu>
		<menu view="holiday" link="option=com_bscore&amp;task=holiday.show">COM_BSCORE_HOLIDAY_MANAGER</menu>
		</submenu>
		<files folder="admin">
			<filename>bscore.php</filename>
			<filename>controller.php</filename>
            <filename>configuration.php</filename>
            <filename>bs_install.sql</filename>
            <filename>bs_uninstall.sql</filename>
            <filename>gnu_gpl.txt</filename>
            <filename>index.html</filename>
            <folder>assets</folder>
            <folder>models</folder>
			<folder>controllers</folder>
            <folder>views</folder>
            <folder>helper</folder>
		</files>
        <!-- Administration Language File Copy Section -->
        <languages folder="language/admin">
            <language tag="en-GB">en-GB.com_bscore.ini</language>
            <language tag="en-GB">en-GB.com_bscore.sys.ini</language>
            <language tag="ja-JP">ja-JP.com_bscore.ini</language>
            <language tag="ja-JP">ja-JP.com_bscore.sys.ini</language>
        </languages>
	</administration>
	
	<!-- Public front end files -->
	<files folder="site">
		<filename>index.html</filename>
		<filename>bscore.php</filename>
    	<folder>models</folder>
		<folder>controllers</folder>
        <folder>views</folder>
        <folder>assets</folder>
        <folder>helpers</folder>
	</files>
    <!-- Site Main Language File Copy Section -->
    <languages folder="language/site">
        <language tag="en-GB">en-GB.com_bscore.ini</language>
        <language tag="ja-JP">ja-JP.com_bscore.ini</language>
    </languages>
    <!-- Custom Install Script to execute -->
    <scriptfile>script.bscore.php</scriptfile>

	<install>
		<sql>
			<file charset="utf8" driver="mysql">bs_install.sql</file>
		</sql>
	</install>
	<uninstall>
		<sql>
			<file charset="utf8" driver="mysql">bs_uninstall.sql</file>
		</sql>
	</uninstall>
</extension>
