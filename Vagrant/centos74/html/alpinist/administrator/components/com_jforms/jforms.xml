<extension type="component" version="2.5" method="upgrade">
	<name>com_jforms</name>
	<creationDate>Auguest 8th, 2010</creationDate>
	<author>Mostafa Muhammad modifyed by Groon</author>
	<authorEmail>mostafa.mohmmed@gmail.com</authorEmail>
	<authorUrl>http://jforms.mosmar.com/</authorUrl>
	<copyright>Copyright (C) 2008 - 2010 Mostafa Muhammad. All rights reserved.</copyright>
	<license>GNU/GPL</license>
	<version>Alpinist3.0.0</version>
	<description>COM_JFORMS_XML_DESC</description>	

	<files folder="components/com_jforms">
			<filename>controller.php</filename>
			<filename>index.html</filename>
			<filename>jforms.php</filename>
			<filename>router.php</filename>
			<folder>views</folder>
			<folder>models</folder>
			<folder>controllers</folder>
			<folder>assets</folder>
	</files>

	<languages folder='language'>
		<language tag="en-GB">en-GB/en-GB.com_jforms.ini</language>
		<language tag="ja-JP">ja-JP/ja-JP.com_jforms.ini</language>
	</languages>

	<administration>
		<menu>com_jforms</menu>
		<files folder="administrator/components/com_jforms">
			<filename>globals.php</filename>
			<filename>index.html</filename>
			<filename>jforms.php</filename>
			<filename>install.sql</filename>
			<filename>uninstall.sql</filename>
			<folder>views</folder>
			<folder>controllers</folder>
			<folder>tables</folder>
			<folder>language</folder>
			<folder>models</folder>
			<folder>helpers</folder>
			<folder>elements</folder>
			<folder>media</folder>
			<folder>libraries</folder>
			<folder>plugins/storage</folder>
			<folder>plugins/export</folder>
			<folder>plugins/elements</folder>
		</files>		
		
		<languages folder='administrator/language'>
			<language tag="en-GB">en-GB/en-GB.com_jforms.ini</language>
			<language tag="en-GB">en-GB/en-GB.com_jforms.sys.ini</language>
			<language tag="ja-JP">ja-JP/ja-JP.com_jforms.ini</language>
			<language tag="ja-JP">ja-JP/ja-JP.com_jforms.sys.ini</language>
		</languages>
	</administration>
	<!-- Custom Install Script to execute -->
    <scriptfile>script.jforms.php</scriptfile>

	<install><sql><file charset="utf8" driver="mysql">install.sql</file></sql></install>
	<uninstall><sql><file charset="utf8" driver="mysql">uninstall.sql</file></sql></uninstall>
 </extension>