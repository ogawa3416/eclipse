<?xml version="1.0" encoding="utf-8"?>
<metadata>
	<layout title="BSC_USER_LIST_LAYOUT_TITL">
		<message>
			<![CDATA[BSC_USER_LIST_LAYOUT_DESC]]>
		</message>
	</layout>
	<!-- Add fields to the parameters object for the layout. -->
	<fields name="params">
		<!-- Basic options. -->
		<fieldset name="basic" label="BSC_BASIC_FIELDSET_LABEL">
			<field name="display_num" type="list" default="50" label="BSC_NUM_LINKS" description="BSC_NUM_LINKS_DESC">
				<option value="5">J5</option>
				<option value="10">J10</option>
				<option value="15">J15</option>
				<option value="20">J20</option>
				<option value="25">J25</option>
				<option value="30">J30</option>
				<option value="50">J50</option>
				<option value="100">J100</option>
				<option value="0">JALL</option>
			</field>
			<field name="user_image_onoff" type="radio" default="0" label="BSC_IMG_ONOFF" description="BSC_IMG_ONOFF_DESC">
				<option value="0">JNO</option>
				<option value="1">JYES</option>
			</field>
			<field name="user_image_path" type="text" default="images/alpinist/usersimages" label="BSC_IMG_PATH" description="BSC_IMG_PATH_DESC" filter="string" size="60"/>
			<field name="user_image_extension" type="list" default="png" label="BSC_IMG_EXTENSION" description="BSC_IMG_EXTENSION_DESC">
				<option value="bmp">bmp</option>
				<option value="gif">gif</option>
				<option value="jpg">jpg</option>
				<option value="png">png</option>
			</field>
			<field name="user_image_default" type="text" default="default.png" label="BSC_IMG_DEFAULT" description="BSC_IMG_DEFAULT_DESC" filter="string" size="60"/>
		</fieldset>
	</fields>
</metadata>
