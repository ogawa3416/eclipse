	<authorUrl>www.groon.co.jp</authorUrl>
	<version>3.0.0</version>
	<description>MOD_LOGINUSER_XML_DESCRIPTION</description>
	<files>
		<filename module="mod_loginuser">mod_loginuser.php</filename>
		<folder>tmpl</folder>
	</files>
	<languages>
		<language tag="en-GB">en-GB.mod_loginuser.ini</language>
		<language tag="en-GB">en-GB.mod_loginuser.sys.ini</language>
		<language tag="ja-JP">ja-JP.mod_loginuser.ini</language>
		<language tag="ja-JP">ja-JP.mod_loginuser.sys.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field
					name="disp_name"
					type="list"
					label="MOD_LOGINUSERNAME_FIELD_NAME_LABEL"
					description="MOD_LOGINUSERNAME_FIELD_NAME_DESC"
					default="0"
					>
					<option value="0">MOD_LOGINUSERNAME_VALUE_NAME</option>
					<option value="1">MOD_LOGINUSERNAME_VALUE_USERNAME</option>
				</field>
				<field
					name="disp_divname"
					type="list"
					label="MOD_LOGINUSERNAME_FIELD_DIVNAME_LABEL"
					description="MOD_LOGINUSERNAME_FIELD_DIVNAME_DESC"
					default="1"
					>
					<option value="1">MOD_LOGINUSERNAME_VALUE_DISPLAY</option>
					<option value="0">MOD_LOGINUSERNAME_VALUE_DISPNONE</option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>
