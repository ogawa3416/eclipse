<?xml version="1.0" encoding="utf-8"?>
<extension
	type="module"
	version="3.0"
	client="site"
	method="upgrade">
	<name>mod_bsscheduler</name>
	<author>GROON solutions</author>
	<creationDate>2011/11/15</creationDate>
	<copyright>Copyright (C) 2005 - 2011 Open Source Matters. All rights reserved.</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<authorUrl>www.groon.co.jp</authorUrl>
	<version>3.0.0</version>
	<description>MOD_BSSCHEDULER_XML_DESCRIPTION</description>
	<files>
		<filename module="mod_bsscheduler">mod_bsscheduler.php</filename>
		<filename>helper.php</filename>
		<filename>index.html</filename>
		<folder>js</folder>
		<folder>tmpl</folder>
		<folder>img</folder>
		<folder>language</folder>
	</files>
	<config>
	  <fields name="params">
		<fieldset name="basic">
		  <field name="alldivision" type="radio" default="0" label="MOD_BSSCHEDULER_ALLDIV_LABEL" description="MOD_BSSCHEDULER_ALLDIV_DESC">
			<option value="0">JNo</option>
			<option value="1">JYes</option>
		  </field>
		  <field name="display_num" type="list" default="5" label="MOD_BSSCHEDULER_DAYLINK_LABEL" description="MOD_BSSCHEDULER_DAYLINK_DESC">
			<option value="1">J1</option>
			<option value="2">J2</option>
			<option value="3">J3</option>
			<option value="4">J4</option>
			<option value="5">J5</option>
		  </field>
		  <field name="time_parts_num" type="list" default="3" label="MOD_BSSCHEDULER_PARTNUM_LABEL" description="MOD_BSSCHEDULER_PARTNUM_DESC">
			<option value="1">J1</option>
			<option value="2">J2</option>
			<option value="3">J3</option>
			<option value="4">J4</option>
		  </field>
		  <field name="window_height" type="text" default="200" label="MOD_BSSCHEDULER_WINHEIGHT_LABEL" description="MOD_BSSCHEDULER_WINHEIGHT_DESC"/>
		  <field name="customfield" type="text" default="eventdv" label="MOD_BSSCHEDULER_CFIELDNAM_LABEL" description="MOD_BSSCHEDULER_CFIELDNAM_DESC"/>
		</fieldset>
	  </fields>
	</config>
</extension>